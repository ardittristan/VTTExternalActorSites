<html>
  <head>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Macondo&display=swap"
      rel="stylesheet"
    />
    <style>
      html, body {margin: 0;padding: 0;}
      * {font-family: 'Macondo', cursive;font-size: 1.25rem !important;}
      a {padding: 15px; width: 100%;}
      table {width: max-content; margin: auto;}
    </style>
  </head>
  <body class="grey darken-4 valign-wrapper">
    <table class="hoverable z-depth-2">
      <tbody>
        <tr>
          <th class="blue-grey darken-4 center-align">
            External Actor Viewers
          </th>
        </tr>
        {{#each directories}}
          <tr class="blue-grey darken-3">
            <td class="center-align">
              <a href="{{this.url}}">
                {{this.name}}
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </body>
</html>
